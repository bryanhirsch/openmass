{#
/**
 * @file
 * Theme override for a breadcrumb trail.
 *
 * Available variables:
 * - breadcrumb: Breadcrumb trail items.
 */
#}

{# Remove current elemement if it's on the structure#}
{% if breadcrumb|last.url == "" %}
  {% set breadcrumb = breadcrumb|slice(0,-1) %}
{% endif %}

{% if breadcrumb %}
  {% include "@organisms/by-template/breadcrumbs.twig" with {
    "breadcrumbs": {
      "light": true,
      "links": breadcrumb
    }
  } %}
{% endif %}
