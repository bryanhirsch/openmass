{# Set the heading level passed through from the parent template. #}
{% set level = 3 %}
{% if element['#level'] is not empty %}
  {% set level = element['#level'] %}
{% endif %}

{% embed "@organisms/by-author/link-list.twig" with  {
  "linkList" : {
    "sectionClass": "",
    "stacked": true,
    "compHeading": {
      "title": "Related",
      "sub": "",
      "color": "",
      "id": "",
      "centered": false,
      "sidebar": true,
      "level": level
    },
    "description": null,
    "stacked": false,
    "hideBullets": false
  }
}%}

  {% block linkListDecorativeLink %}
    {% for decorativeLink in items %}
      {% if decorativeLink.content|render|striptags|trim %}
        <li class="ma__link-list__item">
          {{ decorativeLink.content }}
        </li>
      {% endif %}
    {% endfor %}
  {% endblock %}
{% endembed %}
