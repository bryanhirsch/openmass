{% set title = '' %}
{% if paragraph.field_hide_heading is not defined or paragraph.field_hide_heading.0.value == 0 %}
  {% set title = content.field_section_long_form_heading|field_value %}
{% endif %}

{% set contained = false %}
{% set paragraphType = content.field_section_long_form_content[0]["#paragraph"]["#values"]["type"] %}
{% if paragraphType in ['iframe', 'caspio', 'image', 'tableau'] %}
  {% set contained = true %}
{% endif %}

{% embed "@organisms/by-author/stacked-row-section.twig" with {
  "stackedRowSection": {
    "title": title,
    "id": "",
    "borderless": true,
    "contained": contained
  },
  "stackedRow": {
    "borderless": true
  }
} %}
  {% block stackedRowContentOverride %}
    {{ content.field_section_long_form_content }}
  {% endblock %}
{% endembed %}

